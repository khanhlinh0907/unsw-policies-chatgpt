<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:background="#F0F0F0"
        android:elevation="16dp"
        >

        <TextView
            android:id="@+id/tvTopic"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="64dp"
            android:background="@android:color/transparent"
            android:text="Chat Message Topic"
            android:textColor="#000000"
            android:textSize="20sp"
            android:elevation="16dp"/>

        <TextView
            android:id="@+id/tvLastMessage"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTopic"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="64dp"
            android:background="@android:color/transparent"
            android:text="Last Message Contents"
            android:textColor="#000000"
            android:textSize="16sp"
            android:elevation="16dp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvLastMessage"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="5dp"
            android:elevation="16dp"
            android:text="01/01/2023"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvDate"
            android:layout_alignEnd="@+id/tvDate"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-7dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="3dp"
            android:elevation="16dp"
            android:text="00:00"
            android:textColor="#000000"
            android:textSize="16sp" />

    </RelativeLayout>

</FrameLayout>
